{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "schedule": [
    "at any time"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/redis/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/redis",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/rabbitmq/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/rabbitmq",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/kubectl/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/kubectl",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/postgresql/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/postgresql",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/mysql/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/mysql",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/mariadb/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/mariadb",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/mongodb/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/mongodb",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/memcached/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/memcached",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/kafka/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/kafka",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/zookeeper/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/zookeeper",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/cassandra/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/cassandra",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/keycloak/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/keycloak",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/openldap/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "ghcr.io/kubelauncher/openldap",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/security\\.yml$/"
      ],
      "matchStrings": [
        "KUBESCAPE_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "kubescape/kubescape",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/security\\.yml$/"
      ],
      "matchStrings": [
        "PLUTO_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "FairwindsOps/pluto",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/helm-docs\\.yml$/"
      ],
      "matchStrings": [
        "HELM_DOCS_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "norwoodj/helm-docs",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "automergeStrategy": "squash"
    }
  ]
}
