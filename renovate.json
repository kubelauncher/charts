{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex",
    "github-actions"
  ],
  "labels": [
    "dependencies"
  ],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "schedule": [
    "at any time"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/charts/[^/]+/values\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*image=(?<depName>\\S+)\\n\\s*tag:\\s*\"(?<currentValue>[^\"]+)\"\\n\\s*digest:\\s*\"(?<currentDigest>[^\"]*)\""
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/security\\.yml$/"
      ],
      "matchStrings": [
        "KUBESCAPE_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "kubescape/kubescape",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/security\\.yml$/"
      ],
      "matchStrings": [
        "PLUTO_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "FairwindsOps/pluto",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/version-bump\\.yml$/"
      ],
      "matchStrings": [
        "HELM_DOCS_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "norwoodj/helm-docs",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github/workflows/version-bump\\.yml$/"
      ],
      "matchStrings": [
        "SCHEMA_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "losisin/helm-values-schema-json",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.+)$"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "automergeStrategy": "squash"
    }
  ]
}
